      Fecha nacimiento <input type="date" class="form-control" value="{{fecha_nacimiento}}" name="fecha_nacimiento">
    </div>

    <div class="form-group">
      Email <input type="email" class="form-control" value="{{email}}" name="email">
    </div>
    <div class="form-group">
      Grupo sanguíneo <input type="text" class="form-control" value="{{grupo_sanguineo}}" name="grupo_sanguineo">
    </div>
    <div class="form-group">
      Teléfono <input type="number" class="form-control" value="{{telefono}}" name="telefono">
    </div>
    <div class="form-group">
      Celular <input type="number" class="form-control" value="{{celular}}" name="celular">
    </div>
    <div class="form-group">
      D.N.I. <input type="number" class="form-control" value="{{dni}}" name="dni">
    </div>
    <button type="submit" class="btn btn-primary">Confirmar modificación</button>
  </form>
</div>

