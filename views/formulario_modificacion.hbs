<div class="container">

  <h1 class="text-center m-4">MODIFICAR REGISTRO ALUMNO</h1>

{{#each alumnos}}
  <form action="/alumnos/confirmar_modificacion" method="POST" class="border p-3 m-3">

    <div class="form-group">
      Número legajo <input type="number" class="form-control" value="{{numero_legajo}}" name="numero_legajo" disabled>
    </div>

    <input type="hidden" value="{{numero_legajo}}" name="numero_legajo"> 

    <div class="form-group">
      Apellido <input type="text" class="form-control" value="{{apellido}}" name="apellido">
    </div>
    <div class="form-group">
      Domicilio <input type="text" class="form-control" value="{{domicilio}}" name="domicilio">
    </div>

    <div class="form-group">
      Código postal <input type="text" class="form-control" value="{{codigo_postal}}" name="codigo_postal">
    </div>

