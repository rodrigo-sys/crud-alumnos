<div class="container">

  <h1 class="text-center m-4">DAR DE ALTA ALUMNO</h1>

  <form action="/alumnos/alta" method="POST" class="border p-3 m-3">
    <div class="form-group">
      Número legajo <input type="number" class="form-control" name="numero_legajo">
    </div>
    <div class="form-group">
       Apellido <input type="text" class="form-control" name="apellido">
    </div>
    <div class="form-group">
       Domicilio <input type="text" class="form-control" name="domicilio">
    </div>

    <div class="form-group">
      Código postal 

      <select class="form-control" name="codigo_postal">
        <option value="7600"> Mar del Plata </option>
        <option value="7601"> Batán </option>
        <option value="8000"> Bahía Blanca </option>
      </select>

    </div>

    <div class="form-group">
       Fecha nacimiento <input type="date" class="form-control" name="fecha_nacimiento">
    </div>
    <div class="form-group">
       Email <input type="email" class="form-control" name="email">
    </div>
    <div class="form-group">
       Grupo sanguíneo <input type="text" class="form-control" name="grupo_sanguineo">
    </div>
    <div class="form-group">
       Teléfono <input type="number" class="form-control" name="telefono">
    </div>
    <div class="form-group">
       Celular <input type="number" class="form-control" name="celular">
    </div>
    <div class="form-group">
     D.N.I. <input type="number" class="form-control" name="dni">
    </div>
    <button type="submit" class="btn btn-primary">Dar de alta</button>
  </form>
</div>

